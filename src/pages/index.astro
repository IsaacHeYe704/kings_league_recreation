---
import Layout from "../layouts/Layout.astro";
const response = await fetch(
  "https://kingsleague-api.herrerayepesisaac.workers.dev/teams"
);
const teams = await response.json();
console.log("hola");
---

<Layout title="Kings League infojobs">
  <div class="container m-auto">
    <header class="flex">
      {
        teams.map(({ id, image, name }) => (
          <>
            <a href={`/team/${id}`}>
              <img class="aspect-square w-16" src={image} alt={`escudo del equipo ${name}`} />
            </a>
          </>
        ))
      }
    </header>
    <main>
      <img
        src="https://kingsleague.pro/wp-content/uploads/2022/12/KL_landscape.svg"
        alt="kings league logo"
      />
      <h1 class="text-6xl text-red-500">
        bienvenido a la pagina de la kings league
      </h1>
    </main>
  </div>
</Layout>
