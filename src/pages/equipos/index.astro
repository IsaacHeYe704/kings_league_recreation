---
import Container from "../../components/Container.astro";
import SectionTitle from "../../components/SectionTitle.astro";
import Layout from "../../layouts/Layout.astro";
import { getAllTeams } from "../../services/teams";
const teams = await getAllTeams()
---

<Layout title="equipos | Kings League ">
  <SectionTitle title='Equipos'/>
  <Container>
    
    <div class="bg-white p-20 -mt-6 rounded shadow-xl mb-40">

      <section class="container gap-8 m-auto grid   md:grid-cols-2 lg:grid-cols-3  py-2  ">
        {
          teams.map((info)=>{
            const {name,image:imageUrl,imageWhite,id} = info
            return(
              <article class="overflow-hidden col-span-1 rounded aspect-video bg-black" >
                <a href={`/equipo/${id}`} class={` group transition-all hover:scale-110 flex gap-x-4 p-4 h-full items-center justify-center relative z-0  `} >
                  <img class="w-28 h-28 brightness-[100] object-contain transition-all group-hover:scale-110 group-hover:brightness-200 z-10 [backface-visibility:hidden]" src={imageWhite} alt={`logo of ${name}`}>
                  <h3 class="text-white font-black text-4xl">{name}</h3>
                  <div class="z-0 absolute inset-0 opacity-10 bg-center bg-[size:150%] group-hover:bg-[size:200%] transition" style={`background-image:url('${imageWhite}')`}/>
                  </a>
              </article>)})}
      </section>
              </div>
            </Container>
</Layout>
