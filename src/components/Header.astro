---
const response = await fetch(
  "https://kingsleague-api.herrerayepesisaac.workers.dev/teams"
);
const teams = await response.json();
---

<header class="flex-col w-screen bg-gradient-to-b from-[#ff6900] via-[#ff6900] to-[#fcb900]">
  <ul class="flex">
    {
      teams.map(({ id, image, name }) => (
        <li>
          <a href={`/team/${id}`}>
            <img
              class="aspect-square w-12"
              src={image}
              alt={`escudo del equipo ${name}`}
            />
          </a>
        </li>
      ))
    }
  </ul>
  <nav>
    <ul class="flex gap-x-4 font-semibold">
      <li><a href="/equipos">Equipos</a></li>
      <li><a href="/calendario">Calendario</a></li>
      <li><a href="/estadisticas">Estadisticas</a></li>
      <li><a href="/contacto">Contacto</a></li>
      <li><a href="/reglamento">Reglamento</a></li>
    </ul>
  </nav>
</header>
